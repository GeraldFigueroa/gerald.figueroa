---
const { title, description, icon, href } = Astro.props;
---

<a href={href} class="block" >
  <div class="bg-[#F3F4F2] p-6 rounded-xl">
    <div class="text-4xl mb-4">{icon}</div>
    <h3 class="text-xl font-semibold mb-3 text-[#313946]">{title}</h3>
    <p class="text-[#7D7383]">{description}</p>
  </div>
</a>